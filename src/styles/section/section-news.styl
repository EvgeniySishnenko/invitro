.overflow-hiddin
    position relative
    overflow hidden 
    padding 140px 0 
.container-news
    margin 0 auto
    max-width 1250px
    padding-left gap
    padding-right gap
    +adapt(1300px)
        max-width: 1200px
        width 100%
    +adapt(1200px)
        width 100%
    +adapt(480px)
        padding-left gap_mob
        padding-right gap_mob
    +adapt(320px)
        min-width 320px
       
.headline
    &_first
        font('playfairDisplayBold', 36px, text)
        position absolute
        top -50px
        left 50%
        width 70%
        transform translateX(-50%)
        text-align center
        z-index 120
        +adapt(1440px)
            width 80%
            font-size: 30px
        +adapt(1200px)
            font-size: 26px
        +adapt(768px)
            font-size: 22px
            width 90%
        +adapt(320px)
            top -80px
    &_italic
        font('playfairDisplayboldItalic', 24px, text) 
        margin 20px 0
        +adapt(1200px)
            font-size 22px
        +adapt(768px)
            font-size 20px
    &_uppercase
        font('playfairDisplayboldItalic', 24px, text) 
        text-transform uppercase
        +adapt(1200px)
            font-size 22px
        +adapt(768px)
            font-size 20px
.news__fancybox__link
    display block
    width 100%
    position relative
.wr__icon-play
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 15%
    height 13%
    z-index 10
.news__fancybox-image
    display block
    max-width 100%
.icon-play__img
    display block
    max-width 100%
    height 100%
.container-news__text
    margin 0 auto
    max-width 775px
    +adapt(790px)
        width 100%
.fancybox__descr
    margin-top 20px
.descr-name
.descr-photograph  
    font('robotoSlabRegular', 24px)
    text-transform uppercase
    +adapt(1200px)
        font-size 22px
    +adapt(768px)
        font-size 18px
.descr-data
    font('robotoSlabRegular', 24px, #cdd2d5)
    +adapt(1200px)
        font-size 22px
    +adapt(768px)
        font-size 18px
.news_box-frame
    border 2px solid black
    padding 100px 0 40px
    position relative
    +adapt(992px)
        padding 80px gap_mob 40px
    &:before
        content ''
        display block
        position absolute
        z-index -10
        top 50px
        left 50%
        transform translate(-50%)
        width 60px
        height 30px
        background url(../images/news/quot.png) no-repeat
        background-repeat no-repeat
        background-size cover
        +adapt(992px)
            width 50px
            height 25px
            top 45px 
.news_box-border-t-b  
    border-top 2px solid black
    border-bottom 2px solid black 
    padding 70px 170px 
    display flex
    align-items center
    +adapt(1440px)
        padding 70px 100px 
    +adapt(1200px)
        padding 60px 0px
    +adapt(992px)
        padding 40px 0px
        flex-direction column
        justify-content center
        .headline_uppercase,
        .descr-data,
        .news_box-text
            text-align center
.news_box-left
    +adapt(992px)
        margin-bottom gap_mob
.news_box-img
    display block
    width 320px
    height 326px
    +adapt(480px)
        width 300px
        height 306px
.news_box-text
    margin-top gap_mob
.margin-r 
    margin-right gap
    +adapt(992px)
        margin-right 0

.padding-l
    padding-left gap
    +adapt(1200px)
        padding-left 0
.news_baner-wr
    width 100%
    position relative
.news_pic-link
    display block
    width 100%
    position relative 
    
    
.news_pic-img,
.news_baner-wr
    display block
    max-width 100%
.other-materials
    margin-top 100px
    position relative
    +adapt(768px)
        margin-top 50px 
.other-materials_shrt-text
    font('playfairDisplayboldItalic', 36px)
    margin 20px 0
    text-align center
    +adapt(1200px)
        font-size 28px
    +adapt(768px)
        font-size 24px
      
.slider-news
    .slider_title
        display block
        margin 50px auto
        width 400px
        +adapt(768px)
            width 100%
.slider-link__wr-img
    display block
    width 100%
    position relative
.slider-news-img   
    display block
    max-width 100%