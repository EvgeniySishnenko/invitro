.section-first
    min-height 100vh
    position relative
    padding-top 70px
    +adapt(992px)
        padding-top 30px
    &:after
        content ''
        display block
        position absolute
        z-index -10
        bottom -30px
        right 30px
        width 330px
        height 330px
        background url(../images/parts/circle.png) no-repeat
        background-repeat no-repeat
        background-size cover
        z-index -1
        // +adapt(1024px)
        //     bottom 0
        +adapt(768px)
            right 20px
            bottom 70px
            width 180px
            height 180px
        +adapt(480px)
            display none
    &:before
        content ''
        display block
        position absolute
        z-index -10
        bottom 100px
        left 50%
        width 65px
        height 65px
        background url(../images/parts/plus.png) no-repeat
        background-repeat no-repeat
        background-size cover
        z-index 0
        +adapt(992px)
            width 40px
            height 40px
            bottom 0
            left 20%
.header
    width 100%
.container-home
    margin 0 auto
    padding 0 60px
    max-width 1920px
    +adapt(768px)
        padding 0 gap_mob
.logo-flex
    display flex
    justify-content space-between
    +adapt(768px)
        flex-direction column 
        align-items center
        
.content__header__logo
    height 60px
.link-logo
    +adapt(1200px)  
        width 300px
        height 50px 
        text-align center
    +adapt(992px)
        width 250px
        height 40px
    +adapt(768px)
        &:last-child
            margin-top 30px
.img-logo
    display inline-block
    height 100%
    +adapt(1200px)  
        max-width 100%
    +adapt(992px)
        max-width 100%
.presents
    margin-top 200px
    +adapt(480px)
        margin-top 50px

.checkup-img-wr
    width 150px
    height 100px
    +adapt(1440px)
        width 100px
        height 70px
    +adapt(992px)
        width 70px
        height 50px 
.checkup-img
    display block
    max-width 100%
    height 100% 
.presents__shrt-text
    font('robotoSlabBold', 42px, rgb(0, 0, 0))
    text-transform uppercase
    +adapt(992px)
        font-size 30px
    +adapt(480px)
        text-align center
.checkup-box
    width 40%
    position relative
    +adapt(1920px) 
        width 70%
    +adapt(1200px)  
        width 100%
        
.checkup-item
    display flex
    align-items center
    margin-top 50px
    position relative
    +adapt(1440px)
        margin-top 30px
    +adapt(480px)
        flex-direction column 
        align-items center
.checkup__shrt-text
    font('robotoSlabBold', 42px, colorBtn)
    text-transform uppercase
    margin-left 30px
    +adapt(992px)
        font-size 30px
        margin-left 20px
    +adapt(480px)
        font-size 25px
.checkup__text
    font('robotoSlabRegular', 24px, text)
    margin-top 50px
    +adapt(1440px)
        margin-top 30px
    +adapt(992px)
        font-size 20px
    +adapt(480px)
        text-align center

.checkup__mouse
    cursor pointer
    position absolute
    top 260px
    left 200px
    animation opacity 5s infinite
    +adapt(992px)
        top 150px
    +adapt(768px)
        display none
.mouse-img-wr
    position relative
    width 44px
    height 65px
.mouse-img
    position absolute
    top 0
    display block
    max-width 100%
    height 100% 
.checkup__mouse-arrow
    width 46px
    position relative
    
.arrow-img1
    position absolute
    // top 5px
    left 50%
    transform translateX(-50%)
    opacity 0
    animation opacity1 2s infinite
    tran(all, .5s)
.arrow-img2
    position absolute
    opacity 0
    // top 21px
    left 50%
    transform translateX(-50%)
    animation opacity2 2s infinite
    tran(all, .5s)
.arrow-img3
    position absolute
    opacity 0
    // top 46px
    left 50%
    transform translateX(-50%)  
    animation opacity3 2s infinite
    tran(all, .5s)
@keyframes opacity
    0%
       transform translateY(0) 
    50%
       transform translateY(30px) 
    100%
       transform translateY(0)
@keyframes opacity1
    0%,40%
        opacity 0
        // top 5px
    55%
        opacity 1  
    100%
        // top 20px
        transform translate(-50%,10px)
        
@keyframes opacity2
    0%,55%
        opacity 0
        // top 21px
    
    70%
        opacity 1 
    100%
        // top 39px
        transform translate(-50% ,24px)
@keyframes opacity3
    0%,70%
        opacity 0
        // top 46px
    85%
        opacity 1 
    100%
        // top 51px
        transform translate(-50%,36px)
.mouse-mobile
    display none
    +adapt(768px)
        display block
        position absolute
        bottom 70px
        left 50%
        transform translateX(-50%)
        z-index 20
        cursor pointer
    +adapt(480px)
        bottom 20px
.mouse-mobile-img-wr
    width 45px
    height 90px 
    +adapt(480px)
        height 70px 