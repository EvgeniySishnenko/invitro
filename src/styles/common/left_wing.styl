.left_wing
    width 100px
    background-color left_wing
    position relative
    
    +adapt(1200px)
        width 100%
        height 70px
.share__social
    position fixed 
    z-index 10
    top 50%
    transform translateY(-50%)
    display flex
    justify-content center
    width 100px
    +adapt(1200px)
        width 100%
        position absolute
        align-items center
.ya-share2__list
    +adapt(1200px)
        display flex !important 
.ya-share2__item
    margin 0 !important
    display block !important
    border 1px solid #fff 
    border-bottom none 
    &:last-child
        border-bottom 1px solid #fff  
    +adapt(1200px)
        border-bottom 1px solid #fff  
        border-right none 
        &:last-child
            border-right 1px solid #fff 
.ya-share2__badge 
    background-color: transparent !important  
.ya-share2__icon
    width 50px !important
    height 50px !important
    
