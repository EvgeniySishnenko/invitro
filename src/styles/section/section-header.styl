.container-header
    margin 0 auto
    max-width 1920px
    padding-left gap
    padding-right gap
    padding-top 70px
    display flex
    justify-content space-between
    +adapt(1400px)
        max-width: 1400px
        width 100%
    +adapt(1200px)
        max-width: 1200px
        width 100%

    +adapt(992px)
        max-width: 992px
        width 100%
    +adapt(768px)
        max-width: 768px
        width 100% 
    +adapt(480px)
        max-width: 480px
        width 100% 
        padding-left gap_mob
        padding-right gap_mob
    +adapt(320px)
        min-width 320px
.header__link-logo
    display block
    width 200px
    &:last-child
        margin-top 20px
.header__link-img-logo
    display block
    width 100%
.header__chk
    display flex
    align-items center
.chk__img-wr 
    width 90px
    height 40px
.chk-img
    display block
    max-width 100%
    height 100%
    margin-right 10px
.chk__shrt-text
    font('robotoSlabBold', 42px, colorBtn)
    text-transform uppercase
.header__backwards
    margin-top 50px
    display flex
    align-items center
    margin-right 10px
    cursor pointer
.backwards__img-wr
    height 18px
    margin-right 15px
    transition all ease-in-out .3s
.backwards__img
    display block
    max-width 100%
    height 100%
.backwards__shrt-text
    font('robotoSlabBold', 18px, rgba(54, 75, 93, 0.702))